<style>
    .container-fluid {
        display: flex;
        flex-wrap: wrap;
    }

    #meme-div {
        display: flex;
        flex-direction: column;

    }

    #imgFile {
        display: block;
        margin: 10px;
        padding: 5px;
        width: 450px;
        height: 450px;
        background-size: 100%;
        text-align: center;
        align-content: center;
        position: relative;
    }

    #text_top,
    #text_bottom {
        position: absolute;
        text-align: center;
        left: 0;
        right: 0;
        margin: 15px;
        padding: 5px 15px 5px 5px;
        font-family: impact;
        font-size: 2.5em;
        text-transform: uppercase;
        color: white;
        letter-spacing: 1px;
        text-shadow: 2px 2px 0 #000,
            -2px -2px 0 #000,
            2px -2px 0 #000,
            -2px 2px 0 #000,
            0px 2px 0 #000,
            2px 0px 0 #000,
            0px -2px 0 #000,
            -2px 0px 0 #000,
            2px 2px 5px #000;
    }

    #text_bottom {
        bottom: 0;
    }

    #text_top {
        top: 0;
    }
</style>

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false" style="margin-bottom:15px; margin-top:5px">
        Filter by Mood
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
        <button class="dropdown-item" type="button">Happy</button>
        <button class="dropdown-item" type="button">Sad</button>
        <button class="dropdown-item" type="button">Angry</button>
        <button class="dropdown-item" type="button">Confused</button>
        <button class="dropdown-item" type="button">In Love</button>
        <button class="dropdown-item" type="button">Sassy</button>
        <button class="dropdown-item" type="button">Over It</button>
        <button class="dropdown-item" type="button">Excited</button>
        <button class="dropdown-item" type="button">Exhausted</button>
        <button class="dropdown-item" type="button">Coding</button>
    </div>
</div>

<div class="container-fluid">
    {{#each meme}}
    <div class="col-xs-12 col-md-6 col-lg-4 col-xl-3 meme" id="meme-div" style="positon:absolute" onclick="">

        <i class="fas fa-download download" style="position:absolute !important; right: 25px; top:25px; color:white"
            style="z-index: 100"></i>

        <a href="{{content}}" download>
            <img src="{{content}}" id="imgFile" alt="memeImg">
        </a>

        <div type="text" value="{{top_text}}" id="text_top">{{top_text}}</div>

        <div type="text" value="{{bottom_text}}" id="text_bottom">{{bottom_text}}</div>

    </div>
    {{/each}}
</div>

