<style>
    .container {
        display: flex;
        flex-wrap: wrap;
    }

    .col-md-6 {
        display: flex;
        flex-direction: column;

    }

    #imgFile {
        display: block;
        margin: 10px;
        padding: 5px;
        width: 450px;
        height: 450px;
        background-size: 100%;
        text-align: center;
        align-content: center;
        position: relative;
    }

    #text_top,
    #text_bottom {
        position: absolute;
        text-align: center;
        left: 0;
        right: 0;
        margin: 15px;
        padding: 5px 15px 5px 5px;
        font-family: impact;
        font-size: 2.5em;
        text-transform: uppercase;
        color: white;
        letter-spacing: 1px;
        text-shadow: 2px 2px 0 #000,
            -2px -2px 0 #000,
            2px -2px 0 #000,
            -2px 2px 0 #000,
            0px 2px 0 #000,
            2px 0px 0 #000,
            0px -2px 0 #000,
            -2px 0px 0 #000,
            2px 2px 5px #000;
    }

    #text_bottom {
        bottom: 0;
    }

    #text_top {
        top: 0;
    }
</style>

<div class="container">

    {{#each meme}}
    <div class="col-md-6" id="meme-div">

        <img src="{{content}}" id="imgFile" alt="memeImg">

        <div type="text" value="{{top_text}}" id="text_top">{{top_text}}</div>

        <div type="text" value="{{bottom_text}}" id="text_bottom">{{bottom_text}}</div>

    </div>
    {{/each}}

</div>