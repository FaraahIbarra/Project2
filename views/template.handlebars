    </nav>

    <div class="image-wrapper">
        <img src="/assets/cssimages/whitewall.jpg" height="300px" width="100%" alt="image">
        <p>Memes based on your mood.</p>
    </div>

    <div class="col-md-8">
        <div>
            {{#each meme}}
            <img src="{{content}}" id="imgFile" alt="memeImg" style="display:none;">
            {{/each}}
        </div>

        <!-- BEGIN: Canvas rendering of generated Meme -->
        <canvas id="meme">
            Unfortunately your browser does not support canvas.
        </canvas>
        <!-- END: Canvas rendering of generated Meme -->

        <a href="javascript:;" class="btn btn-primary btn-block" id="download_meme">
            <i class="fa fa-download" aria-hidden="true"></i> Download
        </a>

<a href="/archive"><button class="fa fa-submit" aria-hidden="true">Submit</button></a>
